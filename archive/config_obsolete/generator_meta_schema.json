{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "sample_size_default": { "type": "integer", "minimum": 1 },
    "operations": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": { "enum": ["listing", "detail", "other"] },
          "sample_size": { "type": "integer", "minimum": 1 },
          "url": { "type": "string" },
          "id_source": { "type": "object", "properties": { "operation": { "type": "string" }, "field": { "type": "string" } } },
          "fields": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "generator": { "type": "string" },
                "value": {},
                "values": { "type": "array" },
                "min": { "type": "number" },
                "max": { "type": "number" },
                "source": { "type": "string" },
                "field": { "type": "string" }
              }
            }
          }
        },
        "required": ["type"]
      }
    }
  },
  "required": ["sample_size_default", "operations"]
}
